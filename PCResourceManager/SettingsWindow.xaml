<Window x:Class="PCResourceManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Border Background="#F9F9F9" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Always on Top" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="Keep this window above all other apps" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                    <CheckBox x:Name="TopMostCheck" HorizontalAlignment="Right" VerticalAlignment="Center" Checked="TopMost_Changed" Unchecked="TopMost_Changed">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                </Grid>
            </Border>

            <Border Background="#F9F9F9" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Run on Startup" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="Start automatically when Windows boots" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                    <CheckBox x:Name="StartupCheck" HorizontalAlignment="Right" VerticalAlignment="Center" Checked="Startup_Changed" Unchecked="Startup_Changed">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                </Grid>
            </Border>

            <Separator Margin="0,20"/>

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="PC Resource Manager" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock Text="Version 1.0.0 (Pro)" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock Text="Created by Rameez Ahmad" Foreground="#0078D7" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Button Content="Close" Width="100" Height="35" Margin="0,30,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>